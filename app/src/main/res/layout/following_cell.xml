<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#9F9F98"
    app:layout_constraintCircleRadius="2dp"
    android:id="@+id/layoutFollowingCell"
    app:cardCornerRadius="5dp"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:fadingEdge="horizontal"
    android:fadingEdgeLength="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/followingTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="3dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/followingAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/followingDescriptionText"
            app:layout_constraintTop_toBottomOf="@+id/followingDescriptionText"
            android:layout_marginStart="3dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>